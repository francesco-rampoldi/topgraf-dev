<?xml version="1.0" encoding="UTF-8"?>
<plugin xmlns="http://www.phonegap.com/ns/plugins/1.0"
    xmlns:android="http://schemas.android.com/apk/res/android"
    id="it.topgraf.cordova.plugins.landscape"
    version="1.0.0">

    <name>Screen Orientation Landscape</name>
    <description>sets orientation Landscape in iOS.</description>
    <license>MIT</license>
    <repo>https://github.com/francesco-rampoldi/topgraf-dev.git</repo>
    <engines>
        <engine name="cordova" version=">=3.0.0" />
    </engines>


		
    <platform name="ios">
		<config-file target="*-Info.plist" parent="UISupportedInterfaceOrientations~ipad" overwrite="true">
            <string></string>
        </config-file>
        
        <config-file target="*-Info.plist" parent="UISupportedInterfaceOrientations~ipad" overwrite="true">
            <array>
                <string>UIInterfaceOrientationLandscape</string>
            </array>
        </config-file>

    </platform>

 

</plugin>
